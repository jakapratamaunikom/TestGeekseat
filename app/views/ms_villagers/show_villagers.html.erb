<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">VILLAGERS APPS</h1>
        <p class="lead text-muted"></p>
        <%= form_tag ms_villagers_show_villagers_path, method: 'get'  do %>
          <div class="form-group col-md-12">
            <div class="row">
              <div class="col-md-5">
                Input Villagers
              </div>
              <div class="col-sm-4">
              <input type="text" id="jml" class="form-control form-control-sm" name="jml">
              </div>
            </div>
          </div>
          <div class="form-group col-md-5">
            <div class="row">
              <div class="col-md-12">
                <%= submit_tag "Calculate", class: "btn btn-sm btn-info" %>
                <%= submit_tag "Reset", name: 'reset', class: "btn btn-sm btn-warning" %>
              </div>
            </div>
          </div>
        <%end%>
        <br>

        <% if @ms_villager.present?%>
          <table class="table table-striped table-hover table-bordered table-sm ">
            <thead>
            <tr>
              <th>Year</th>
              <th>Killed</td>
            </tr>
            </thead>
            <% @ms_villager.times do |i|  %>
              <%i+1%>
              <tr>
                <td><%= i+1 %></td>
                <td><%= (1..i+1).map {|x| fib(x)}.sum %></td>
              </tr>
            <%end%>
          </table>
        <%end%>


      </div>
    </div>
  </section>
</main>


