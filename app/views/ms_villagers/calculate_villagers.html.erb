<main>
  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Calculate Average Age</h1>
        <p class="lead text-muted"></p>
        <%= form_tag ms_villagers_calculate_villagers_path, method: 'get'  do %>
          <div class="form-group col-md-12">
            <div class="row">
              <div class="col-md-4">
                Age Person X
              </div>
              <div class="col-sm-2">
                <input type="number" id="prs_x" class="form-control form-control-sm" name="prs_x" onkeyup="if(this.value<0){this.value= this.value * -1}">
              </div>

              <div class="col-md-4">
                Year of Dead X
              </div>
              <div class="col-md-2">
                <input type="number" id="y_death_x" class="form-control form-control-sm" name="y_death_x" onkeyup="if(this.value<0){this.value= this.value * -1}">
              </div>

            </div>
          </div>

          <div class="form-group col-md-12">
            <div class="row">
              <div class="col-md-4">
                Age Person Y
              </div>
              <div class="col-md-2">
                <input type="number" id="prs_y" class="form-control form-control-sm" name="prs_y" onkeyup="if(this.value<0){this.value= this.value * -1}">
              </div>
              <div class="col-md-4">
                Year of Dead Y
              </div>
              <div class="col-md-2">
                <input type="number" id="y_death_y" class="form-control form-control-sm" name="y_death_y" onkeyup="if(this.value<0){this.value= this.value * -1}">
              </div>
            </div>
          </div>
          <br>
          <div class="form-group col-md-12">
            <div class="row">
              <div class="col-md-4">
              </div>
              <div class="col-md-4">
                <%= submit_tag "Calculate", class: "btn btn-sm btn-info" %>
                <%= submit_tag "Reset", name: 'reset', class: "btn btn-sm btn-warning" %>
              </div>
              <div class="col-md-4">
              </div>
            </div>
          </div>
        <%end%>
        <br>

          <table class="table table-striped table-hover table-bordered table-sm ">
            <thead>
            <tr>
              <th>Average  is <%= @ms_villager %></th>
            </tr>
            </thead>
          </table>


      </div>
    </div>
  </section>
</main>


